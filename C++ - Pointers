#include <iostream>
#include <iomanip>
using namespace std;

const int N = 6; 
int board[N][N];

int mx[8] = { 2, 1, -1, -2, -2, -1, 1, 2 };
int my[8] = { 1, 2, 2, 1, -1, -2, -2, -1 };

bool inside(int x, int y) {
    return x >= 0 && y >= 0 && x < N && y < N;
}

bool solve(int x, int y, int step) {
    if (step == N * N) return true;

    for (int i = 0; i < 8; i++) {
        int nx = x + mx[i];
        int ny = y + my[i];

        if (inside(nx, ny) && board[nx][ny] == 0) {
            board[nx][ny] = step + 1;
            if (solve(nx, ny, step + 1)) return true;
            board[nx][ny] = 0;
        }
    }
    return false;
}

int main() {
    int sx, sy;
    cout << "Ведіть стартову позицію коня (0-" << N - 1 << "): ";
    cin >> sx >> sy;

    for (int i = 0; i < N; i++)
        for (int j = 0; j < N; j++)
            board[i][j] = 0;

    board[sx][sy] = 1;

    if (solve(sx, sy, 1)) {
        cout << "Знайдено шлях\n";
        for (int i = 0; i < N; i++) {
            for (int j = 0; j < N; j++)
                cout << setw(3) << board[i][j] << " ";
            cout << endl;
        }
    }
    else {
        cout << "Шлях не знайдено";
    }
}
