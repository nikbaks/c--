

#include <iostream>
using namespace std;
#include <string> 
class Array
{
	int* arr;//-825669978
	int size;//-825669978
public:
	Array()
	{
		size = 0;
		arr = nullptr;
	}
	//explicit - забороняє неявне перетвореня від одного типу даних до іншого
	explicit Array(int size)//constructor parametrized
	{
		this->size = size;

		arr = new int[size];
		for (int i = 0; i < size; i++)
		{
			arr[i] = rand() % 100;
		}
	}
	
	
	void display()const
	{
		for (int i = 0; i < size; i++)
		{
			cout << arr[i] << " ";
		}
		
	}
	int operator[](int index) {
		if (index >= 0 && index < size) {
			return arr[index];
			
		}
		return -1;
	}
	void operator()(int value)
	{
		for (int i = 0; i < size; i++)
		{
			arr[i] += value;
		}
	}
	operator int()
	{
		int sum = 0;
			for (int i = 0; i < size; i++)
			{
				sum += arr[i];
			}
			return sum;
	}
	operator string()
	{
		string res = "";
		for (int i = 0; i < size; i++)
		{
			res += to_string(arr[i]);
		}
		return res;
	}
	~Array()
	{
		if (arr != nullptr)
			delete[]arr;
	}
};
int main()
{
	Array arr(10);
	arr.display();
	cout << arr[0] << endl;
	arr(100);
	arr.display();
	int res = arr;
	cout << res << endl;
	cout << (string)arr << endl;
}

