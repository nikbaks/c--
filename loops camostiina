#include <iostream>
using namespace std;

int main() {
    int n;
    cout << "Ведіть число: ";
    cin >> n;

    cout << "Усі числа від 0 до " << n << ":\n";
    if (n >= 0) {
        for (int i = 0; i <= n; i++) {
            cout << i << " ";
        }
    }
    else {
        for (int i = 0; i >= n; i--) {
            cout << i << " ";
        }
    }
    cout << endl;

    cout << "Парні числа від 0 до " << n << ":\n";
    if (n >= 0) {
        for (int i = 0; i <= n; i++) {
            if (i % 2 == 0) cout << i << " ";
        }
    }
    else {
        for (int i = 0; i >= n; i--) {
            if (i % 2 == 0) cout << i << " ";
        }
    }
    cout << endl;

    return 0;
}

 
