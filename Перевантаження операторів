#include <iostream>
#include <string>

using namespace std;

class Array {
    int* data;
    int size;

public:
    Array(int s) {
        size = s;
        data = new int[size]{};
    }

    ~Array() {
        delete[] data;
    }

    int& operator[](int index) {
        return data[index];
    }

    void operator()(int value) {
        for (int i = 0; i < size; i++) {
            data[i] += value;
        }
    }

    operator int() const {
        int sum = 0;
        for (int i = 0; i < size; i++) {
            sum += data[i];
        }
        return sum;
    }

    operator string() const {
        string res = "";
        for (int i = 0; i < size; i++) {
            res += to_string(data[i]);
            if (i < size - 1)
                res += " ";
        }
        return res;
    }
};

int main() {
    Array arr(5);

    for (int i = 0; i < 5; i++)
        arr[i] = i + 1;

    arr(3);

    int sum = arr;
    string str = arr;

    cout << sum << endl;
    cout << str << endl;

    return 0;
}
