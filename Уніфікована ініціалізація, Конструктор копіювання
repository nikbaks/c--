#include <iostream>
#include <cstdlib>
#include <ctime>

using namespace std;

class Array {
private:
    long* arr;
    int size;

public:
    Array() {
        arr = nullptr;
        size = 0;
    }

    Array(int size) {
        this->size = size;
        arr = new long[size];
        for (int i = 0; i < size; i++)
            arr[i] = 0;
    }

    Array(const Array& other) {
        size = other.size;
        if (size > 0) {
            arr = new long[size];
            for (int i = 0; i < size; i++)
                arr[i] = other.arr[i];
        } else {
            arr = nullptr;
        }
    }

    ~Array() {
        delete[] arr;
    }

    void fillRandom() {
        if (size == 0) return;
        for (int i = 0; i < size; i++)
            arr[i] = rand() % 100;
    }

    void fillFromKeyboard() {
        if (size == 0) return;
        for (int i = 0; i < size; i++)
            cin >> arr[i];
    }

    void print() const {
        if (size == 0) {
            cout << "Масив порожній\n";
            return;
        }
        for (int i = 0; i < size; i++)
            cout << arr[i] << " ";
        cout << endl;
    }

    void addElement(long value) {
        long* temp = new long[size + 1];
        for (int i = 0; i < size; i++)
            temp[i] = arr[i];
        temp[size] = value;

        delete[] arr;
        arr = temp;
        size++;
    }

    void removeByIndex(int index) {
        if (index < 0 || index >= size) return;

        long* temp = new long[size - 1];
        for (int i = 0, j = 0; i < size; i++) {
            if (i != index)
                temp[j++] = arr[i];
        }

        delete[] arr;
        arr = temp;
        size--;
    }

    void removeByValue(long value) {
        int index = -1;
        for (int i = 0; i < size; i++) {
            if (arr[i] == value) {
                index = i;
                break;
            }
        }
        if (index != -1)
            removeByIndex(index);
    }

    void sortAsc() {
        for (int i = 0; i < size - 1; i++)
            for (int j = 0; j < size - i - 1; j++)
                if (arr[j] > arr[j + 1])
                    swap(arr[j], arr[j + 1]);
    }

    void sortDesc() {
        for (int i = 0; i < size - 1; i++)
            for (int j = 0; j < size - i - 1; j++)
                if (arr[j] < arr[j + 1])
                    swap(arr[j], arr[j + 1]);
    }

    long min() const {
        if (size == 0) return 0;
        long m = arr[0];
        for (int i = 1; i < size; i++)
            if (arr[i] < m) m = arr[i];
        return m;
    }

    long max() const {
        if (size == 0) return 0;
        long m = arr[0];
        for (int i = 1; i < size; i++)
            if (arr[i] > m) m = arr[i];
        return m;
    }

    double average() const {
        if (size == 0) return 0;
        long sum = 0;
        for (int i = 0; i < size; i++)
            sum += arr[i];
        return (double)sum / size;
    }
};

int main() {
    srand(time(nullptr));

    Array a(5);
    a.fillRandom();
    a.print();

    a.addElement(50);
    a.print();

    a.removeByValue(50);
    a.print();

    a.sortAsc();
    a.print();

    cout << "Min: " << a.min() << endl;
    cout << "Max: " << a.max() << endl;
    cout << "Avg: " << a.average() << endl;

    Array b = a;
    b.print();

    return 0;
}
