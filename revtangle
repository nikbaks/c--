#include <iostream>
using namespace std;

struct Coord {
    int x;
    int y;
};

class Rectangle {
private:
    int width;
    int height;
    char symbol;
    Coord pos;

public:
    Rectangle() {
        width = 5;
        height = 3;
        symbol = '#';
        pos.x = 0;
        pos.y = 0;
    }

    Rectangle(int size) {
        width = size > 0 ? size : 1;
        height = size > 0 ? size : 1;
        symbol = '#';
        pos.x = 0;
        pos.y = 0;
    }

    Rectangle(int w, int h) {
        width = w > 0 ? w : 1;
        height = h > 0 ? h : 1;
        symbol = '#';
        pos.x = 0;
        pos.y = 0;
    }

    void draw() const {
        for (int i = 0; i < pos.y; i++)
            cout << endl;

        for (int i = 0; i < height; i++) {
            for (int k = 0; k < pos.x; k++)
                cout << " ";
            for (int j = 0; j < width; j++)
                cout << symbol;
            cout << endl;
        }
    }

    void resize(int dh, int dw) {
        if (height + dh > 0)
            height += dh;
        if (width + dw > 0)
            width += dw;
    }

    void move(int dx, int dy) {
        if (pos.x + dx >= 0)
            pos.x += dx;
        if (pos.y + dy >= 0)
            pos.y += dy;
    }
};
